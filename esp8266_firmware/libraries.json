{
  "libraries": [
    {
      "name": "ESP8266WiFi",
      "version": "latest",
      "source": "built-in",
      "description": "WiFi connectivity for ESP8266"
    },
    {
      "name": "ESP8266WebServer", 
      "version": "latest",
      "source": "built-in",
      "description": "HTTP web server functionality"
    },
    {
      "name": "WebSocketsServer",
      "version": "2.4.0+",
      "source": "Library Manager",
      "author": "Markus Sattler",
      "description": "WebSocket server for real-time communication",
      "install_command": "Search 'WebSockets' by Markus Sattler"
    },
    {
      "name": "ArduinoJson",
      "version": "6.21.0+", 
      "source": "Library Manager",
      "author": "Benoit Blanchon",
      "description": "JSON serialization and parsing",
      "install_command": "Search 'ArduinoJson' by Benoit Blanchon"
    },
    {
      "name": "AccelStepper",
      "version": "1.64.0+",
      "source": "Library Manager", 
      "author": "Mike McCauley",
      "description": "Stepper motor control with acceleration",
      "install_command": "Search 'AccelStepper' by Mike McCauley"
    },
    {
      "name": "WiFiManager",
      "version": "2.0.0+",
      "source": "Library Manager",
      "author": "tablatronix",
      "description": "WiFi configuration portal",
      "install_command": "Search 'WiFiManager' by tablatronix"
    },
    {
      "name": "LittleFS",
      "version": "latest",
      "source": "built-in",
      "description": "File system for ESP8266"
    },
    {
      "name": "ESP8266mDNS",
      "version": "latest", 
      "source": "built-in",
      "description": "Multicast DNS for device discovery"
    }
  ],
  "board_settings": {
    "board": "NodeMCU 1.0 (ESP-12E Module)",
    "cpu_frequency": "80 MHz",
    "flash_size": "4MB (FS:2MB OTA:~1019KB)",
    "upload_speed": "921600",
    "port": "COM_PORT_HERE"
  },
  "installation_steps": [
    "1. Open Arduino IDE",
    "2. Go to File → Preferences", 
    "3. Add ESP8266 board URL: https://arduino.esp8266.com/stable/package_esp8266com_index.json",
    "4. Go to Tools → Board → Boards Manager",
    "5. Search 'ESP8266' and install",
    "6. Install each library from Library Manager",
    "7. Select board: NodeMCU 1.0 (ESP-12E Module)",
    "8. Select correct COM port",
    "9. Upload firmware"
  ]
}
